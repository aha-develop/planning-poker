{
    "compilerOptions": {
        "checkJs": true,
        "noEmit": true,
        "lib": [
            "DOM",
            "ES6",
            "ES2019"
        ],
        "jsx": "preserve",
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@aha-app"
        ],
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "module": "ES6",
        "moduleResolution": "node",
        "target": "ES6"
    }
}